{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.rulers": [
    100
  ],
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "prettier.printWidth": 100,
  "typescript.preferences.importModuleSpecifier": "relative",
}
